{
  // General Settings
  // ---------------------------------------
  // make vscode use keycodes rather than key names, everything is broken without it
  "keyboard.dispatch": "keyCode",
  // Theme configuration
  "workbench.colorTheme": "GitHub Dark Dimmed",
  "editor.fontFamily": "SauceCodePro Nerd Font",
  "editor.fontSize": 12,
  "window.menuBarVisibility": "toggle",
  "window.autoDetectHighContrast": false,
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.fontFamily": "SauceCodePro Nerd Font",
  // Show suggestion in curernt line
  "editor.inlineSuggest.enabled": true,
  // relative numbers to use with vim
  "editor.lineNumbers": "relative",
  // use external terminal
  "terminal.explorerKind": "external",
  "terminal.external.linuxExec": "foot",
  // don't bother me with tips
  "workbench.tips.enabled": false,
  // dont send my data to Microsoft
  "telemetry.telemetryLevel": "off",
  // scroll screen when cursor is near the edge
  "editor.cursorSurroundingLines": 8,
  // start with empty file
  "workbench.startupEditor": "newUntitledFile",
  "files.autoSave": "onFocusChange",
  "files.insertFinalNewline": true,
  "workbench.editor.limit.enabled": true,
  "extensions.ignoreRecommendations": true,
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "search.useIgnoreFiles": true,
  "search.useGlobalIgnoreFiles": true,
  // ---------------------------------------
  // Plugins confinguration
  // ---------------------------------------
  "gitlens.showWelcomeOnInstall": false,
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": false
  },
  "vscode-neovim.neovimExecutablePaths.linux": "/nix/store/fkq8q2n39fqfqs2wh791bwpbdyxssbgw-user-environment/bin/vscode-neovim",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "tabnine.experimentalAutoImports": true,
}
